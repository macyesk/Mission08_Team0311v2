@model List<TaskItem>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row text-center fw-bold p-2 m-2">
        <div class="col">Stephen Covey's Time Management Matrix</div>
    </div>
    <div class="row">
        <div class="col-2 border border-1"></div>
        <div class="col-5 border border-1 p-2">Urgent</div>
        <div class="col-5 border border-1 p-2">Not Urgent</div>
    </div>
    <div class="row" style="min-height: 100px">
        <div class="col-2 border border-1">
            <div class="p-2">Important</div>
        </div>
        <div class="col-5 border border-1">
            <p class="m-1">Quadrant 1</p>
            @foreach (var task in Model.Where(t => t.Quadrant == 1))
            {
                <div class="task-item">
                    <a href="@Url.Action("CreateTask", "Home", task)" class="text-decoration-none">
                        <p>@task.TaskName Due: @task.DueDate</p>
                    </a>
                </div>
            }
        </div>
        <div class="col-5 border border-1">
            <p class="m-1">Quadrant 2</p>
            @foreach (var task in Model.Where(t => t.Quadrant == 2))
            {
                <div class="task-item">
                    <a href="@Url.Action("CreateTask", "Home", task)">
                        <p>@task.TaskName Due: @task.DueDate</p>
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="row" style="min-height: 100px">
        <div class="col-2 border border-1">
            <div class="p-2">Not Important</div>
        </div>
        <div class="col-5 border border-1">
            <p class="m-1">Quadrant 3</p>
            @foreach (var task in Model.Where(t => t.Quadrant == 3))
            {
                <div class="task-item">
                    <a href="@Url.Action("CreateTask", "Home", task)">
                        <p>@task.TaskName Due: @task.DueDate</p>
                    </a>
                </div>
            }
        </div>
        <div class="col-5 border border-1">
            <p class="m-1">Quadrant 4</p>
            @foreach (var task in Model.Where(t => t.Quadrant == 4))
            {
                <div class="task-item">
                    <a href="@Url.Action("CreateTask", "Home", task)">
                        <p>@task.TaskName Due: @task.DueDate</p>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
